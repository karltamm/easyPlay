{
  "manifest_version": 2,
  "name": "EasyPlay",
  "version": "1.0.4",
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch?v=*"],
      "js": ["dist/youtubeHandler.js"]
    },
    {
      "matches": ["*://*.coursera.org/*"],
      "js": ["dist/courseraHandler.js"]
    }
  ],
  "permissions": ["tabs", "nativeMessaging", "webNavigation", "activeTab", "scripting", "storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "easyPlay@easyPlay"
    }
  }
}
